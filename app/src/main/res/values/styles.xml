<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- This color shows in the app bar -->
        <item name="colorPrimary">#00ACC1</item>

        <!-- This color shows in status bar and contextual app bar -->
        <item name="colorPrimaryDark">#01579B</item>

        <!-- This color shows in UI controls: checkboxes and text field -->
        <item name="colorAccent">#FF9800</item>
    </style>

    <style name="CustomText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="HeaderTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_margin">8dp</item>
    </style>
</resources>
